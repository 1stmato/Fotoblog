<%# if comment.display == true %>
<article class="row">
  <div class="col-md-2 col-sm-2 hidden-xs">
    <figure class="thumbnail">
      <img class="img-responsive" src="http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg"/>
      <figcaption class="text-center"><%= comment.user.try(:email) %></figcaption>
    </figure>
  </div>
  <div class="col-md-10 col-sm-10">
    <div class="panel panel-default arrow left">
      <div class="panel-body">
        <% if @post.allow_comments == "Approval" %>
            <%	if comment.validated == false %>
                <p><i class="fa fa-gavel"></i> Not validated ! </i><%= link_to "ok", post_path+"/comments/#{comment.id}/toggle_visible", class:"btn btn-success" %></p>
            <% end %>

            <%	if comment.validated == true %>
                <p><i class="fa fa-gavel"></i> Validated </i><%= link_to "undo", post_path+"/comments/#{comment.id}/toggle_visible", class:"btn btn-success" %></p>
            <% end %>

            <% if comment.display == true %>
                <p class="text-left"><i class="fa fa-eye"> Visible</i></p>
            <% else %>
                <p class="text-left"><i class="fa fa-eye-slash"> Not-visible</i></p>
            <% end %>

        <% end %>
        <header class="text-left">
          <div class="comment-user"><i class="fa fa-user"></i> <%= comment.user.try(:email) %> </div>
          <time class="comment-date" datetime="<%= comment.created_at %>">
            <i class="fa fa-clock-o"></i><%= comment.created_at %></time>
        </header>
        <div class="comment-post">
          <p class="text-left">
            <i class='fa fa-arrow-up'></i><%= link_to "(#{comment.ups})", post_path+"/comments/#{comment.id}/like"%>
            <i class='fa fa-arrow-down'></i><%= link_to "(#{comment.downs})", post_path+"/comments/#{comment.id}/dislike"%>
          </p>
          <p>
            <%= comment.body %>
          </p>
        </div>
        <p class="text-right">
          <%= link_to 'Destroy', [comment.post, comment],
                      method: :delete,
                      data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
          <button type="button" class="btn btn-default btn-sm" data-toggle="collapse" data-target="#<%= "hide#{comment.id}" %>">
            <i class="fa fa-reply"></i> Replay
          </button>
          <!-- Modal window -->

        <hr>
        <div id="<%= "hide#{comment.id}" %>" class="collapse">

          <%= form_for([@post, @post.comments.build]) do |f| %>

              <p class="form-group">
                <%= f.label :body %><br>
                <%= f.text_area :body, class: "form-control" %>
              </p>
              <input type="hidden" name="parent_id" value="<%= comment.id %>" />
              <p class="form-group">
                <%= f.submit value:"Respond", class: "btn btn-success" %>
              </p>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</article>
