<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, 'error') %> prohibited this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :photo %><br>
    <%= image_tag @post.photo.url(:thumb) %><br />
    <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.label :tags_string %><br>
    <%= f.text_field :tags_string, :value => @post.tags.map{|tag| tag.name}.join(', ')%>
  </p>

  <p>
    <%= f.label :comments %><br>
    <%= f.select(:comments, options_for_select([['Always', 'Always'], ['After approval', 'Approval'], ['Not Allowed', 'Never']], :selected => @post.comments)) %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
