<p>
  <%= rating_for @post %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <%= link_to @post.photo.url, :target => "_blank" do %>
      <%= image_tag @post.photo.url(:medium) %>
  <% end %>
</p>
<% if can? :update, @post %>
    <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %></td>
<% end %>
<% if can? :delete, @post %>
    <td><%= link_to 'Delete', post_path(@post),
                    method: :delete,
                    data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
<% end %>

<hr>
<h3>Add a comment:</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

    <p class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: "form-control" %>
    </p>
    <p class="form-group">
      <%= f.submit class: "btn btn-success" %>
    </p>
<% end %>
<hr>
<h3>Comments</h3>


<div class="container">
  <div class="row">
    <div class="col-md-8">
      <section class="comment-list">
        <!-- First Comment -->
        <% @post.comments.where(Comment: nil).each do |comment| %>

            <article class="row">
              <div class="col-md-2 col-sm-2 hidden-xs">
                <figure class="thumbnail">
                  <img class="img-responsive" src="http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg"/>
                  <figcaption class="text-center"><%= comment.user.try(:email) %></figcaption>
                </figure>
              </div>
              <div class="col-md-10 col-sm-10">
                <div class="panel panel-default arrow left">
                  <div class="panel-body">
                    <header class="text-left">
                      <div class="comment-user"><i class="fa fa-user"></i> <%= comment.user.try(:email) %> </div>
                      <time class="comment-date" datetime="<%= comment.created_at %>">
                        <i class="fa fa-clock-o"></i><%= comment.created_at %></time>
                    </header>
                    <div class="comment-post">
                      <p>
                        <%= comment.body %>
                      </p>
                    </div>
                    <p class="text-right">
                      <%= link_to 'Destroy', [comment.post, comment],
                                  method: :delete,
                                  data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
                      <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal"><i class="fa fa-reply"></i> Replay</button>
                      <!-- Modal window -->
                      <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                      <div class="modal-dialog">
                        <%= form_tag("/posts/#{@post.id}/comments", method: "post") do %>

                            <input name="parent" type="hidden" value="<%= comment.id %>" />
                        <!-- Modal content-->
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Replay</h4>
                          </div>
                          <div class="modal-body">
                            <div class="panel panel-default">
                                <div class="panel-body"><b>Original: </b><%= comment.body %></div>
                            </div>
                            <label for="body">Your comment: </label>
                            <textarea name="body"  value="" class='form-control' rows="5"></textarea>

                          </div>
                          <div class="modal-footer">
                            <input name="<%= "submit" %>" type="submit" value="Replay" class="btn btn-success"/>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                        </div>
                        <% end %>
                      </div>
                    </div>


                  </div>
                </div>
              </div>
            </article>

        <% end %>
      </section>
    </div>
  </div>
</div>