<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <%= link_to @post.photo.url, :target => "_blank" do %>
  <%= image_tag @post.photo.url(:medium) %>
  <% end %>
</p>
<% if can? :update, @post %><td><%= link_to 'Edit', edit_post_path(@post) %></td><% end %>
<% if can? :delete, @post %><td><%= link_to 'Delete', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td><% end %>