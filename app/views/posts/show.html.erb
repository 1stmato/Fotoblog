<p>
  <%= rating_for @post %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <%= link_to @post.photo.url, :target => "_blank" do %>
  <%= image_tag @post.photo.url(:medium) %>
  <% end %>
</p>
<% if can? :update, @post %><td><%= link_to 'Edit', edit_post_path(@post), class:"btn btn-info" %></td><% end %>
<% if can? :delete, @post %><td><%= link_to 'Delete', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td><% end %>

<hr>
<h3>Add a comment:</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>

        <p class="form-group">
          <%= f.label :body %><br>
          <%= f.text_area :body, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= f.submit class:"btn btn-success"%>
        </p>
<% end %>
<hr>
<h3>Comments</h3>

<% @post.comments.each do |comment| %>

    <%=  link_to 'Destroy', [comment.post, comment],
                     method: :delete,
                     data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <b><%= @post.comments  %></b>

    <p>
      <strong>Commenter:</strong>
      <%= comment.user.try(:email)%>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
<% end %>
